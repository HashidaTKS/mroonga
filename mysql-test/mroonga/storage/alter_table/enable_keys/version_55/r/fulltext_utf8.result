DROP TABLE IF EXISTS diaries;
SET NAMES utf8;
CREATE TABLE diaries (
id int PRIMARY KEY,
title varchar(255),
FULLTEXT KEY title_index (title)
) DEFAULT CHARSET=utf8;
ALTER TABLE diaries DISABLE KEYS;
