drop table if exists diaries;
set names utf8;
create table diaries (
id int primary key,
title varchar(255),
content text,
create_dt datetime,
fulltext index (title),
index (create_dt),
index (title, create_dt)
) default charset utf8;
alter table diaries disable keys;
show create table diaries;
