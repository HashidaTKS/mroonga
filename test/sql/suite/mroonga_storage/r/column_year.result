DROP TABLE IF EXISTS aniversary_memos;
CREATE TABLE aniversary_memos (
id INT PRIMARY KEY AUTO_INCREMENT,
title TEXT,
created_year YEAR,
party_year YEAR,
KEY (created_year)
) DEFAULT CHARSET UTF8;
