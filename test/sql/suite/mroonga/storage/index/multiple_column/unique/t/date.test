--source include/have_mroonga.inc

--disable_warnings
drop table if exists t1;
--enable_warnings

create table t1 (c1 int primary key, c2 date, c3 date, unique key uk1(c2,c3));
insert into t1 values(1,'2012-12-31','2000-01-01');
insert into t1 values(2,'2012-10-05','2012-12-31');
insert into t1 values(3,'9999-12-31','2012-10-05');
insert into t1 values(4,'1000-01-01','9999-12-31');
insert into t1 values(5,'2000-01-01','1000-01-01');
select c1, DATE_FORMAT(c2, '%Y-%m-%d'), DATE_FORMAT(c3, '%Y-%m-%d') from t1 force index(uk1) where c2 = '1000-01-01' and c3 = '9999-12-31';
select c1, DATE_FORMAT(c2, '%Y-%m-%d'), DATE_FORMAT(c3, '%Y-%m-%d') from t1 force index(uk1) order by c2, c3;
delete from t1 where c1 = 1;
insert into t1 values(1,'2012-12-31','2000-01-01');
drop table t1;

--source include/have_mroonga_deinit.inc
