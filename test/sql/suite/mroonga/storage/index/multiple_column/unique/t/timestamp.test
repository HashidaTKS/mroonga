--source include/have_mroonga.inc

--disable_warnings
drop table if exists t1;
--enable_warnings

create table t1 (c1 int primary key, c2 timestamp, c3 timestamp, unique key uk1(c2,c3));
insert into t1 values(1,'2012-12-31 15:11:12','2000-01-01 00:00:00');
insert into t1 values(2,'2012-12-31 15:11:11','2012-12-31 00:00:00');
insert into t1 values(3,'2038-01-18 15:14:07','2012-10-05 13:21:48');
insert into t1 values(4,'1970-01-01 12:00:01','2038-01-18 15:14:07');
insert into t1 values(5,'2000-01-01 01:02:03','1970-01-01 12:00:01');
select c1, DATE_FORMAT(c2, '%Y-%m-%d %H:%i:%s'), DATE_FORMAT(c3, '%Y-%m-%d %H:%i:%s') from t1 force index(uk1) where c2 = '1970-01-01 12:00:01' and c3 = '2038-01-18 15:14:07';
select c1, DATE_FORMAT(c2, '%Y-%m-%d %H:%i:%s'), DATE_FORMAT(c3, '%Y-%m-%d %H:%i:%s') from t1 force index(uk1) order by c2, c3;
select c1, DATE_FORMAT(c2, '%Y-%m-%d %H:%i:%s'), DATE_FORMAT(c3, '%Y-%m-%d %H:%i:%s') from t1 force index(uk1) order by c2 desc, c3 desc;
select DATE_FORMAT(c2, '%Y-%m-%d %H:%i:%s'), DATE_FORMAT(c3, '%Y-%m-%d %H:%i:%s') from t1 force index(uk1) order by c2, c3;
delete from t1 where c1 = 1;
insert into t1 values(1,'2012-12-31 15:11:12','2000-01-01 00:00:00');
drop table t1;

--source include/have_mroonga_deinit.inc
