--source include/have_mroonga.inc

--disable_warnings
drop table if exists t1;
--enable_warnings

create table t1 (c1 int primary key, c2 year, c3 year, unique key uk1(c2,c3));
insert into t1 values(1,'2012','2000');
insert into t1 values(2,'2012','2012');
insert into t1 values(3,'2155','2012');
insert into t1 values(4,'1901','2155');
insert into t1 values(5,'2000','1901');
select c1, c2, c3 from t1 force index(uk1) where c2 = '1901' and c3 = '2155';
select c1, c2, c3 from t1 force index(uk1) order by c2, c3;
select c1, c2, c3 from t1 force index(uk1) order by c2 desc, c3 desc;
select c2, c3 from t1 force index(uk1) order by c2, c3;
delete from t1 where c1 = 1;
insert into t1 values(1,'2012','2000');
drop table t1;

--source include/have_mroonga_deinit.inc
