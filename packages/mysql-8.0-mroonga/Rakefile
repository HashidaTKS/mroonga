require_relative "../mroonga-package-task"

class MySQL80MroongaPackageTask < MroongaPackageTask
  def initialize
    super("mysql-8.0")
  end

  def apt_targets_default
    []
  end

  def ubuntu_targets_default
    [
      ["focal", "20.04"],
      ["hirsute", "21.04"],
      ["impish", "21.10"],
    ]
  end

  def enable_yum?
    false
  end
end

task = MySQL80MroongaPackageTask.new
task.define
